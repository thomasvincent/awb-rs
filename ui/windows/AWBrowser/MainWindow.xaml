<Window x:Class="AWBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AWBrowser"
        mc:Ignorable="d"
        Title="AWBrowser - AutoWikiBrowser Rust Edition"
        Height="800" Width="1400"
        WindowStartupLocation="CenterScreen">

    <Window.CommandBindings>
        <CommandBinding Command="ApplicationCommands.Open" Executed="Open_Executed"/>
        <CommandBinding Command="ApplicationCommands.Save" Executed="Save_Executed"/>
        <CommandBinding Command="ApplicationCommands.Close" Executed="Close_Executed"/>
    </Window.CommandBindings>

    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Login..." Click="Login_Click"/>
                <Separator/>
                <MenuItem Header="_Open Page..." Command="ApplicationCommands.Open"/>
                <MenuItem Header="_Save Page" Command="ApplicationCommands.Save"/>
                <Separator/>
                <MenuItem Header="E_xit" Command="ApplicationCommands.Close"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Undo" Command="ApplicationCommands.Undo"/>
                <MenuItem Header="_Redo" Command="ApplicationCommands.Redo"/>
                <Separator/>
                <MenuItem Header="Cu_t" Command="ApplicationCommands.Cut"/>
                <MenuItem Header="_Copy" Command="ApplicationCommands.Copy"/>
                <MenuItem Header="_Paste" Command="ApplicationCommands.Paste"/>
                <Separator/>
                <MenuItem Header="_Find..." Command="ApplicationCommands.Find"/>
                <MenuItem Header="_Replace..." Command="ApplicationCommands.Replace"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Show _Diff" IsCheckable="True" IsChecked="True" Click="ToggleDiff_Click"/>
                <MenuItem Header="Show _Rules" IsCheckable="True" IsChecked="True" Click="ToggleRules_Click"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Apply Rules" Click="ApplyRules_Click"/>
                <MenuItem Header="_Preview Changes" Click="PreviewChanges_Click"/>
                <MenuItem Header="_Settings..." Click="Settings_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Login" Click="Login_Click"/>
            <Separator/>
            <Button Content="Fetch List" Click="FetchList_Click"/>
            <Button Content="Get Page" Click="GetPage_Click"/>
            <Separator/>
            <Button Content="Apply Rules" Click="ApplyRules_Click"/>
            <Button Content="Preview" Click="PreviewChanges_Click"/>
            <Separator/>
            <Button Content="Save" Command="ApplicationCommands.Save"/>
        </ToolBar>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Style="{StaticResource StatusBarText}" Text="Ready"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="PageCountText" Style="{StaticResource StatusBarText}" Text="0 pages"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <ProgressBar x:Name="ProgressBar" Width="150" Height="16" Minimum="0" Maximum="100" Value="0"/>
            </StatusBarItem>
        </StatusBar>

        <!-- Main Content Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="300" MinWidth="200"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Page List -->
            <DockPanel Grid.Column="0">
                <Label DockPanel.Dock="Top" Content="Pages" FontWeight="Bold"/>
                <Grid DockPanel.Dock="Top" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="SearchBox" Grid.Column="0"
                             PlaceholderText="Search pages..."/>
                    <Button Grid.Column="1" Content="ðŸ”" Width="30" Padding="0" Margin="5,5,5,5"/>
                </Grid>
                <ListBox x:Name="PageListBox"
                         SelectionChanged="PageListBox_SelectionChanged"
                         DisplayMemberPath="Title"/>
            </DockPanel>

            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch"/>

            <!-- Center Panel: Editor -->
            <DockPanel Grid.Column="2">
                <Label DockPanel.Dock="Top" Content="Editor" FontWeight="Bold"/>

                <TabControl x:Name="EditorTabs" Margin="5">
                    <TabItem Header="Source">
                        <TextBox x:Name="SourceEditor"
                                 AcceptsReturn="True"
                                 AcceptsTab="True"
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 TextWrapping="NoWrap"
                                 Margin="0"/>
                    </TabItem>
                    <TabItem Header="Diff View">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="DiffView"
                                      FontFamily="Consolas"
                                      FontSize="12"
                                      Padding="10"
                                      Background="#F5F5F5"/>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </DockPanel>

            <GridSplitter Grid.Column="3" Width="5" HorizontalAlignment="Stretch"/>

            <!-- Right Panel: Rules Editor -->
            <DockPanel Grid.Column="4">
                <Label DockPanel.Dock="Top" Content="Rules" FontWeight="Bold"/>

                <ToolBar DockPanel.Dock="Top">
                    <Button Content="+" Click="AddRule_Click" ToolTip="Add Rule"/>
                    <Button Content="-" Click="RemoveRule_Click" ToolTip="Remove Rule"/>
                    <Button Content="â†‘" Click="MoveRuleUp_Click" ToolTip="Move Up"/>
                    <Button Content="â†“" Click="MoveRuleDown_Click" ToolTip="Move Down"/>
                </ToolBar>

                <DataGrid x:Name="RulesGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="True"
                          CanUserDeleteRows="True"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding Enabled}" Width="60"/>
                        <DataGridTextColumn Header="Find" Binding="{Binding Pattern}" Width="*"/>
                        <DataGridTextColumn Header="Replace" Binding="{Binding Replacement}" Width="*"/>
                        <DataGridCheckBoxColumn Header="Regex" Binding="{Binding IsRegex}" Width="60"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
